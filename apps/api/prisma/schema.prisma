generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  resetToken   String?
  resetTokenExpiry DateTime?

  accounts         Account[]
  emailCredentials EmailCredential[]
  transactions     Transaction[]
  debts            Debt[]
  incomeSources    IncomeSource[]
  workUnits        WorkUnit[]
  projectedIncomes ProjectedIncome[]
  categories       Category[]
  systemConfigs    SystemConfig[]
  fixedExpenses    FixedExpense[]
  investmentAccounts InvestmentAccount[]
  savingsGoals     SavingsGoal[]
}

model Account {
  id        String   @id @default(uuid())
  name      String
  type      String   // e.g., "WALLET", "BANK", "INVESTMENT"
  balance   Decimal  @default(0.0)
  color     String?  // Hex code for UI
  transactions Transaction[]
  emailCredentials EmailCredential[]
  fixedExpenses FixedExpense[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id          String   @id @default(uuid())
  amount      Decimal  // Using Decimal to avoid floating point errors
  date        DateTime @default(now())
  description String
  type        String   // INCOME, EXPENSE
  
  category    String? // Keep for backward compatibility or simple usage
  categoryId  String?
  categoryRel Category? @relation(fields: [categoryId], references: [id])

  accountId   String
  account     Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  projectedIncomes ProjectedIncome[]
  debtId      String?
  debt        Debt?    @relation(fields: [debtId], references: [id])

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id          String   @id @default(uuid())
  name        String
  color       String?
  icon        String?
  type        String?  // INCOME, EXPENSE
  budgetLimit Decimal?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions Transaction[]
  debts        Debt[]
  fixedExpenses FixedExpense[]
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailCredential {
  id        String   @id @default(uuid())
  email     String
  password  String   // Encrypted
  host      String
  port      Int
  secure    Boolean  @default(true)
  folder    String   @default("INBOX")
  sender    String?
  subject   String?
  accountId String
  account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Debt {
  id              String   @id @default(uuid())
  name            String
  totalAmount     Decimal  @default(0.0)
  interestRate    Decimal  @default(0.0) // Monthly Interest Rate (%)
  minimumPayment  Decimal  @default(0.0)
  dueDate         Int      // Day of month (1-31)
  
  installmentsTotal Int?
  installmentsPaid  Int      @default(0)
  originalAmount    Decimal?
  firstInstallmentDate DateTime?

  categoryId      String?
  categoryRel     Category? @relation(fields: [categoryId], references: [id])
  
  priority        Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  transactions    Transaction[]

  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model IncomeSource {
  id           String   @id @default(uuid())
  name         String
  amount       Decimal  @default(0.0)
  payDay       Int      // Day of month (1-31)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}


model WorkUnit {
  id              String   @id @default(uuid())
  name            String
  defaultPrice    Decimal  @default(0.0)
  estimatedTime   Decimal  @default(0.0) // Hours
  taxRate         Decimal  @default(0.0) // Percentage (0-100)
  projections     ProjectedIncome[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ProjectedIncome {
  id          String   @id @default(uuid())
  workUnitId  String
  workUnit    WorkUnit @relation(fields: [workUnitId], references: [id], onDelete: Cascade)
  status      String   @default("PLANNED") // PLANNED, IN_PROGRESS, DONE, PAID
  date        DateTime 
  amount      Decimal
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  transactionId String?
  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: SetNull)

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SystemConfig {
  id        String   @id @default(uuid())
  key       String
  value     String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([key, userId])
}

model FixedExpense {
  id          String   @id @default(uuid())
  description String
  amount      Decimal
  dueDay      Int
  autoCreate  Boolean  @default(false)
  startDate   DateTime?
  endDate     DateTime?

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  accountId   String
  account     Account  @relation(fields: [accountId], references: [id])

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model InvestmentAccount {
  id            String   @id @default(uuid())
  name          String
  type          String   // FIXED_INCOME, VARIABLE_INCOME, CRYPTO, CASH, OTHER
  balance       Decimal  @default(0.0)
  profitability Decimal? // e.g. 100.0, 12.5
  profitabilityType String? // e.g. "CDI", "FIXED_YEARLY", "IPCA"
  maturityDate  DateTime?
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SavingsGoal {
  id            String   @id @default(uuid())
  name          String
  targetAmount  Decimal
  currentAmount Decimal  @default(0.0)
  deadline      DateTime?
  description   String?
  priority      Int      @default(0)
  status        String   @default("IN_PROGRESS") // IN_PROGRESS, COMPLETED, PAUSED
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
