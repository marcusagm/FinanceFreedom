generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id        String   @id @default(uuid())
  name      String
  type      String   // e.g., "WALLET", "BANK", "INVESTMENT"
  balance   Decimal  @default(0.0)
  color     String?  // Hex code for UI
  transactions Transaction[]
  emailCredentials EmailCredential[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id          String   @id @default(uuid())
  amount      Decimal  // Using Decimal to avoid floating point errors
  date        DateTime @default(now())
  description String
  type        String   // INCOME, EXPENSE
  category    String?
  accountId   String
  account     Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EmailCredential {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Encrypted
  host      String
  port      Int
  secure    Boolean  @default(true)
  accountId String
  account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Debt {
  id              String   @id @default(uuid())
  name            String
  totalAmount     Decimal  @default(0.0)
  interestRate    Decimal  @default(0.0) // Monthly Interest Rate (%)
  minimumPayment  Decimal  @default(0.0)
  dueDate         Int      // Day of month (1-31)
  categoryId      String?
  priority        Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model IncomeSource {
  id           String   @id @default(uuid())
  name         String
  amount       Decimal  @default(0.0)
  payDay       Int      // Day of month (1-31)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model WorkUnit {
  id              String   @id @default(uuid())
  name            String
  defaultPrice    Decimal  @default(0.0)
  estimatedTime   Decimal  @default(0.0) // Hours
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
